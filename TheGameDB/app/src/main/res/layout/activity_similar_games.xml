<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_similar_games"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ushaswini.inclass06.SimilarGamesActivity">

    <TextView
        android:text="@string/tv_similar_title_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_similar_title"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listView_SimilarGames"
        android:layout_below="@+id/tv_similar_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:layout_height="350dp" />

    <Button
        android:text="@string/btn_finish_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:id="@+id/btn_similar_finish"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:background="@color/colorPrimary"/>
</RelativeLayout>
